<!DOCTYPE html>
<html>
  <meta charset="UTF-8">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/jquery.mCustomScrollbar.css" rel="stylesheet" />
    
    <!-- css -->
    <link rel="stylesheet" type="text/css" href="css/style.css">

    <title>Memo Web Application</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="js/click.js"></script>
    <script type="text/javascript">
        $(window).load(function(){
            $("#labelList").mCustomScrollbar();
        });
        $(document).ready(function() {
        
        
        //처음화면은 1번째 라벨의 1번째 메모를 보여줌..
        $("#labelList ul li:eq(1)").addClass('selected');
        
        // 라벨을 클릭했을 때.. 
        var labelClickIndex = '';
        var labelID = $("#labelList ul li:eq(1)").val();
        
        
        $('#labelList ul li').click(function() {
          
            labelClickIndex = $('#labelList ul li').index(this);
            //$("#labelList ul li:eq(3)").val()
            
            var labelText = $("#labelList ul li:eq("+labelClickIndex+") div").text();
            $("#selectLabel").text(labelText);
            
            
            labelID = $("#labelList ul li:eq("+labelClickIndex+")").val();
            $("li").removeClass('selected');
            $(this).addClass('selected');
            
            clickLabel(labelID);

            alert("라벨 클릭함..." + "(label_id: "+labelID+")");
        });

        $('#memoList ul li').click(function() {
            var memoClickIndex = $('#memoList ul li').index(this);
            clickMemo(labelID, memoClickIndex);
            alert("메모 클릭함..." + "(index: "+memoClickIndex+")");
        }); 
        
        
        // Add New Label 버튼
        $("#btnAddLabel").click(function(){
            $('div.labelModal').modal({remote : 'modalTest'});
        });
        
        // 새 메모 쓰기..
        $("#btnNewMemo").click(function(){
            $('div.memoModal').modal({remote : 'newMemo'});
        });
        
        
      });

        
      
    </script>

  </head>
  <body>
    <div class="page-header">
      <h1>MEMO Web Application</h1>
    </div>
    <div id="appContent">
      <div id="labelArea">
        <div id="labelList" class="mCustomScrollbar" data-mcs-theme="minimal-dark">
          <ul class="list-group" id="labelTab">
            <li class="list-group-item">
              <label class="badge"><%= memoCount %></label>
              전체메모
            </li>
            <% for(var i=0;i<arrLabel.length; i++) { 
              var labelList = arrLabel[i];
            %>
            <li class="list-group-item" value="<%= labelList.LABEL_ID %>">
              <label class="badge"><%= arrMemoCount[i].MEMO_CNT %></label>
              <div><%= labelList.LABEL_NAME %></div>
            </li>
          <% } %>
          </ul>
        </div>
        <div id="labelBtnArea">
          <!-- <a class="btn btn-primary" type="button" data-toggle="modal" data-target=".bs-example-modal-sm" href="modalTest">Small modal</a> -->
          <button class="btn btn-primary" type="button" id="btnAddLabel">Add New Label</button>
          <button class="btn btn-primary glyphicon glyphicon-cog" type="button">
          </button>
        </div>
        </div>

      <div id="memoArea">
        <!-- 라벨 이름변경/설정/삭제 -->
        <div id="labeleSet">       
          <label class="title" id="selectLabel"><%= arrLabel[0].LABEL_NAME %></label>
          <div id="memoBtnArea">
            <button class="btn btn-primary glyphicon glyphicon-edit" id="btnNewMemo"></button>
            <button class="btn btn-primary glyphicon glyphicon-trash"></button>
          </div>
        </div>

        <div id="memoList" class="mCustomScrollbar memoList" data-mcs-theme="minimal-dark">
          <ul class="list-group" id="memoTab">
          <% for(var i=0;i<arrFirstLabelMemo.length; i++) { 
            var memoList = arrFirstLabelMemo[i];
          %>
            <li class="list-group-item">
              <input type="checkbox"></input>
              <label class="list-group-item-heading"><%= memoList.MEMO_TITLE %></label>
              <label class="memoUpdateDate list-group-item-heading">2016-03-29 10:29:11</label>
              <div class="list-group-item-text memoPreview">내용 미리보기</div>
            </li>
          <% } %>
          </ul>
        </div>
      </div>

      <div id="memoDetailArea">
        <div class="panel panel-default" id="memoDetail">
          <div class="panel-heading">
            <label class="title" id="memoTitle"></label>
            <label class="memoUpdateDate" id="memoUpdateDate">메모수정일</label>
          </div>
          <div class="panel-body mCustomScrollbar" id="memo_content" data-mcs-theme="minimal-dark">
            <p></p>
          </div>
          <div id="memoUpdateBtnArea">
            <button class="btn btn-primary" type="button">Edit</button>
            <button class="btn btn-primary" type="button">Delete</button>
          </div>
        </div>
      </div>
      <!-- 라베추가 모달 -->
      <div class="modal fade labelModal">
        <div class="modal-dialog dialog-label">
          <div class="modal-content">
            <!-- 모달 영역 -->
          </div>
        </div>
      </div>
      <!--새메모 모달-->
      <div class="modal fade memoModal">
        <div class="modal-dialog dialog-newMemo">
          <div class="modal-content">
            <!-- 모달 영역 -->
          </div>
        </div>
      </div>
      
      
    </div>
  </body>
</html>